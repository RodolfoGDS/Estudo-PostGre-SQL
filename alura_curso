

/*
CRIANDO UMA TABELA NO BANCO  DE DADOS alura. 

tipo DATE ---> YYYY-MM-DD
tipo TIME ---> HH:MM:SS
tipo TIMESTAMP --->YYYY-MM-DD HH:MM:SS

*/
CREATE TABLE aluno(
	id SERIAL,
	nome VARCHAR(255),
	cpf CHAR(11),
	observação TEXT,
	idade INTEGER,
	dinheiro NUMERIC(10,2),
	altura REAL,
	ativo BOOLEAN,
	data_nascimento DATE,
	hora_aula TIME,
	matriculado_em TIMESTAMP
);
/*
VISUALIZCANDO A TABELA alunos. 
*/
SELECT * FROM aluno;

/*
INSERINDO DADOS NA TABELA alunos. 
*/

INSERT INTO aluno (
	nome,
	cpf,
	observação,
	idade,
	dinheiro,
	altura,
	ativo,
	data_nascimento,
	hora_aula,
	matriculado_em
) VALUES(
